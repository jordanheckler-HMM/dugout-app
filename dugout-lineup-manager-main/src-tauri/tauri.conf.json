{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dugout",
  "version": "0.1.3",
  "identifier": "com.dugout.manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8123",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dugout",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://localhost:8100 http://127.0.0.1:8100 http://localhost:11434 http://127.0.0.1:11434; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/backend-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1RDk2NTgxRDY1MzIxN0YKUldSL0lWUFdnV1haWmRVQzMrVkF0R0NsRzVWeU5keDJ2MEkxNWNrYkd6MzZIK0Qwb1NySklOL2UK",
      "endpoints": [
        "https://github.com/jordanheckler-HMM/dugout-app/releases/latest/download/latest.json"
      ]
    }
  }
}
