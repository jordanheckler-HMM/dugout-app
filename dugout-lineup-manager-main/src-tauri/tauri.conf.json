{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dugout",
  "version": "0.1.0",
  "identifier": "com.dugout.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8123",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dugout",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/backend-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}