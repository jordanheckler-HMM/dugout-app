{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/backend-sidecar",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/.hymetalab/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    }
  ]
}